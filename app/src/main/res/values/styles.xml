<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <!--Typography-->
        <item name="textAppearanceHeadline4">@style/Zood.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Zood.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Zood.Headline6</item>
        <item name="textAppearanceBody1">@style/Zood.Body1</item>
        <item name="textAppearanceBody2">@style/Zood.Body2</item>
        <item name="textAppearanceButton">@style/Zood.Button</item>
        <item name="textAppearanceCaption">@style/Zood.Caption</item>
        <item name="textAppearanceOverline">@style/Zood.Overline</item>
    </style>

    <style name="WelcomeEditText" parent="Widget.Design.TextInputLayout">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/welcome_edittext_hint</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/welcome_edittext_text</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="android:colorControlNormal">@color/welcome_edittext_text</item>
        <item name="android:colorControlActivated">@color/welcome_edittext_text</item>
        <item name="android:colorControlHighlight">@color/welcome_edittext_text</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>


</resources>
