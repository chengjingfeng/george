<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MapTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:statusBarColor">#33000000</item>-->
    </style>

    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:titleTextColor">@android:color/white</item>-->
    </style>

    <style name="WelcomeEditText" parent="Widget.Design.TextInputLayout">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/welcome_edittext_hint</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/welcome_edittext_text</item>
    </style>

    <style name="WelcomeTheme.EditText">
        <item name="android:colorControlNormal">@color/welcome_edittext_text</item>
        <item name="android:colorControlActivated">@color/welcome_edittext_text</item>
        <item name="android:colorControlHighlight">@color/welcome_edittext_text</item>
    </style>
    
    <style name="PijunSwitch">
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:thumbTint">@android:color/white</item>
    </style>

</resources>
