<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/avatar"
        tools:src="@drawable/george_clooney"
        android:elevation="12dp"
        android:background="@drawable/avatar_border"
        android:scaleType="fitCenter"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="0dp" />
    <LinearLayout
        android:id="@+id/sharing_items"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="64dp"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/share_switch_label"
            tools:text="Not sharing"
            android:fontFamily="sans-serif-light"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Switch
            android:id="@+id/share_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:showText="false"
            android:checked="true"
            android:theme="@style/PijunSwitch" />
    </LinearLayout>
    <TextView
        android:id="@+id/username"
        tools:text="MoonMeander"
        android:textColor="@color/friend_item_username"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintVertical_bias="1.0" />
    <TextView
        android:id="@+id/location"
        android:gravity="center_vertical"
        tools:text="Sherman Oaks"
        android:textColor="@color/friend_item_black"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:drawableTint="@color/friend_item_black"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintTop_toBottomOf="@id/username" />
    <TextView
        android:id="@+id/update_time"
        tools:text=" â€¢ 4 min ago"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/friend_item_gray"
        android:fontFamily="sans-serif-light"
        app:layout_constraintStart_toEndOf="@id/location"
        app:layout_constraintTop_toTopOf="@id/location"
        app:layout_constraintBottom_toBottomOf="@id/location"
        app:layout_constraintEnd_toStartOf="@id/sharing_items"

        app:layout_constraintHorizontal_bias="0"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</android.support.constraint.ConstraintLayout>