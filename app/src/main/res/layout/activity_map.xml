<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.constraint.ConstraintLayout
    android:id="@+id/root"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">
    <io.pijun.george.view.DrawerBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        android:id="@+id/touch_interceptor"
        android:elevation="100dp"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/close_button"
        android:contentDescription="@string/close_drawer"
        android:src="@drawable/ic_arrow_back_24dp"
        android:backgroundTint="#00000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <io.pijun.george.view.AvatarView
        android:id="@+id/avatar"
        android:elevation="10dp"
        app:borderColor="@android:color/white"
        android:onClick="showProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_button"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/username"
        tools:text="arash"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginStart="12dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintTop_toTopOf="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/location"
        tools:text="Thousand Oaks"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginStart="12dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.constraint.Guideline
        android:id="@+id/guide_50"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/settings"
        android:text="@string/settings"
        android:elevation="110dp"
        android:onClick="showProfile"
        android:textColor="@color/ui_tint_gray"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@id/guide_50"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/about"
        android:text="@string/about"
        android:elevation="110dp"
        android:textColor="@color/ui_tint_gray"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/log_out"
        android:text="@string/log_out"
        android:elevation="110dp"
        android:onClick="onLogOutAction"
        android:textColor="@color/ui_tint_gray"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:transformPivotX="0px"
        android:elevation="30dp"
        tools:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/map_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/friends_sheet"
            android:name="io.pijun.george.FriendsSheetFragment"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            app:behavior_peekHeight="72dp"
            app:behavior_hideable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_friend_fab"
            android:src="@drawable/ic_person_black_24px"
            app:fabSize="normal"
            app:borderWidth="0dp"
            android:tint="@color/ui_tint_gray"
            android:backgroundTint="@color/my_location_fab_background"
            android:onClick="onAddFriendAction"
            app:layout_anchor="@+id/friends_sheet"
            app:layout_anchorGravity="top|end"
            app:layout_insetEdge="bottom"
            android:layout_marginEnd="24dp"
            app:layout_behavior="android.support.design.widget.FloatingActionButton$Behavior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </android.support.design.widget.CoordinatorLayout>
</android.support.constraint.ConstraintLayout>
</layout>
