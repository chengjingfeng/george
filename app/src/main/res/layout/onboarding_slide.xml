<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide_25"
        app:layout_constraintGuide_percent="0.25"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guide_28"
        app:layout_constraintGuide_percent="0.2"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide_125"
        app:layout_constraintGuide_percent="0.125"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guide_875"
        app:layout_constraintGuide_percent="0.875"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image"
        tools:src="@drawable/onboarding_share_location"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@id/vertical_guide_25"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guide_28"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constrainedHeight="true"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/title"
        tools:text="Share location"
        style="@style/Zood.Headline5"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<!--    app:layout_constraintStart_toStartOf="@id/vertical_guide_125"-->
<!--    app:layout_constraintEnd_toEndOf="@id/vertical_guide_875"-->
    <TextView
        android:id="@+id/body"
        tools:text="Keep track of each other by sharing and requesting location."
        style="@style/Zood.Body2"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>