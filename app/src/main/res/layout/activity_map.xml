<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/root"
    android:background="@null"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        tools:background="@android:color/holo_green_light"
        android:elevation="0dp"
        android:outlineProvider="bounds"
        android:transformPivotX="0px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/avatars"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/info_panel"
        android:background="@android:color/white"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/top_guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/refresh_progress_bar"
            android:indeterminate="true"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/top_guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/pijun_navy"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="arash" />

        <ImageView
            android:id="@+id/motion"
            tools:src="@drawable/ic_sharp_bike_20dp"
            android:contentDescription="@null"
            android:tint="@color/pijun_navy"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@id/username"
            app:layout_constraintBottom_toBottomOf="@id/username"
            app:layout_constraintStart_toEndOf="@id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/bearing"
            tools:src="@drawable/ic_sharp_navigation_20dp"
            android:contentDescription="@null"
            android:tint="@color/pijun_navy"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/motion"
            app:layout_constraintTop_toTopOf="@id/username"
            app:layout_constraintBottom_toBottomOf="@id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/info_overflow"
            android:contentDescription="@null"
            android:src="@drawable/ic_add_24dp"
            android:background="?attr/selectableItemBackground"
            android:tint="@color/pijun_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/username"
            app:layout_constraintBottom_toBottomOf="@id/username"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/update_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/pijun_navy"
            android:textSize="12sp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@id/username"
            app:layout_constraintBottom_toBottomOf="@id/username"
            app:layout_constraintEnd_toStartOf="@id/info_overflow"
            tools:text="25 min. ago" />

        <TextView
            android:id="@+id/battery"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:drawableStart="@drawable/ic_sharp_battery_50_20dp"
            android:drawablePadding="4dp"
            tools:drawableTint="@color/pijun_grey"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/pijun_grey"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/address"
            app:layout_constraintBottom_toBottomOf="@id/address"
            tools:text="50%" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/pijun_grey"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@id/battery"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/username"
            tools:text="1212 Westlake Blvd, Thousand Oaks" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/refresh_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/refresh"
            android:onClick="onRequestLocation"
            android:textColor="@color/pijun_blue"
            app:layout_constraintStart_toStartOf="@id/username"
            app:layout_constraintTop_toBottomOf="@id/address" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/share_switch"
            android:text="@string/sharing"
            app:switchPadding="8dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintBaseline_toBaselineOf="@id/refresh_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:thumbTint="@color/switch_thumb"
            app:trackTint="@color/switch_track" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/my_location_fab"
        android:transformPivotX="0px"
        android:src="@drawable/ic_my_location_black_24dp"
        app:elevation="4dp"
        app:fabSize="normal"
        android:tint="@color/my_location_fab_tint"
        android:backgroundTint="@color/my_location_fab_background"
        app:borderWidth="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="280dp" />

    <Button
        android:id="@+id/share_button"
        android:text="Share"
        android:onClick="onAddFriendAction"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/layers_button"
        android:text="Layers"
        app:layout_constraintTop_toBottomOf="@id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/settings_button"
        android:text="Settings"
        android:onClick="onShowSettings"
        app:layout_constraintTop_toBottomOf="@id/layers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- It's positioning gets controlled by the fragment -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/avatars"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="72dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
