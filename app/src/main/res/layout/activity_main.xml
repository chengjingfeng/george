<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.pijun.george.MainActivity">

    <Button
        android:text="@string/init"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="onInit"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="16dp"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:text="Create key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="onCreateKey"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:text="Create KeyPairs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:onClick="onCreateKeyPairs"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginStart="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/activity_main"
        android:layout_marginTop="144dp"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:text="Encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="onSecretKeyEncrypt"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginEnd="15dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        android:layout_marginBottom="16dp"
        tools:layout_constraintBottom_creator="1" />

    <Button
        android:text="Decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:onClick="onSecretKeyDecrypt"
        app:layout_constraintRight_toRightOf="@+id/activity_main"
        android:layout_marginEnd="57dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/button4"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:text="Encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button6"
        android:onClick="onPublicKeyEncrypt"
        app:layout_constraintLeft_toLeftOf="@+id/button3"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:text="Decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button7"
        app:layout_constraintLeft_toRightOf="@+id/button6"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        android:onClick="onPublicKeyDecrypt" />

</android.support.constraint.ConstraintLayout>
