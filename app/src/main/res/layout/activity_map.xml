<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<io.pijun.george.view.MainLayout
    android:id="@+id/root"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        tools:background="@android:color/holo_green_light"
        android:elevation="0dp"
        android:outlineProvider="bounds"
        android:transformPivotX="0px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/marker_details"
        android:paddingBottom="8dp"
        android:background="@android:color/white"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marker_top_guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/marker_progress_bar"
            android:indeterminate="true"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/marker_top_guideline"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/marker_request_location"
            android:text="Request Location"
            android:onClick="onRequestLocation"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/marker_username"
            tools:text="kanoong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/marker_request_location"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/marker_location"
            tools:text="Townsgate Road, Westlake Village"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/marker_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/marker_time"
            tools:text="now"
            app:layout_constraintStart_toEndOf="@id/marker_username"
            app:layout_constraintTop_toTopOf="@id/marker_username"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/marker_activity"
            tools:text="Driving"
            app:layout_constraintStart_toStartOf="@id/marker_username"
            app:layout_constraintTop_toBottomOf="@+id/marker_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/marker_direction"
            android:contentDescription="@null"
            android:src="@drawable/ic_navigation_black_24dp"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/marker_activity"
            app:layout_constraintTop_toBottomOf="@id/marker_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/marker_speed"
            tools:text="29.7 m/s"
            app:layout_constraintStart_toEndOf="@id/marker_direction"
            app:layout_constraintTop_toBottomOf="@id/marker_location"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/my_location_fab"
        android:transformPivotX="0px"
        android:src="@drawable/ic_my_location_black_24dp"
        app:elevation="4dp"
        app:fabSize="normal"
        android:tint="@color/my_location_fab_tint"
        android:backgroundTint="@color/my_location_fab_background"
        app:borderWidth="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="280dp" />

    <Button
        android:id="@+id/share_button"
        android:text="Share"
        android:onClick="onAddFriendAction"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/layers_button"
        android:text="Layers"
        app:layout_constraintTop_toBottomOf="@id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/settings_button"
        android:text="Settings"
        android:onClick="onShowSettings"
        app:layout_constraintTop_toBottomOf="@id/layers_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- It's positioning gets controlled by the fragment -->
    <fragment
        android:id="@+id/friends_sheet"
        android:name="io.pijun.george.FriendsSheetFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/touch_interceptor"
        android:elevation="38dp"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</io.pijun.george.view.MainLayout>
</layout>
