<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friends_list"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.AppBarLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fab_options"
        android:background="@android:color/holo_orange_light"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/friends_list"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="40dp"
        android:layout_height="152dp">
        <ImageButton
            android:id="@+id/create_limited_share"
            android:clickable="true"
            android:onClick="onCreateLimitedShareAction"
            app:srcCompat="@drawable/ic_schedule_black_24px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <ImageButton
            android:id="@+id/add_friend"
            app:srcCompat="@drawable/ic_person_black_24px"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/create_limited_share"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/friends_fab"
        android:clickable="true"
        android:onClick="onFABAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        app:layout_behavior="android.support.design.widget.FloatingActionButton$Behavior"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/friends_list"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_add_24dp" />

</android.support.design.widget.CoordinatorLayout>
