<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".WelcomeActivity">
    <io.pijun.george.WelcomeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:context=".WelcomeActivity">
        <ImageView
            android:contentDescription="@null"
            android:id="@+id/cloud1"
            android:src="@drawable/ic_cloud"
            android:tint="@color/cloud_outline"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="80dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <ImageView
            android:contentDescription="@null"
            android:id="@+id/cloud2"
            android:src="@drawable/ic_cloud"
            android:tint="@color/cloud_outline"
            android:layout_marginTop="190dp"
            android:layout_marginStart="0dp"
            android:layout_width="56dp"
            android:layout_height="56dp" />

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/pijun_symbol"
            android:contentDescription="@null"
            app:layout_marginTopPercent="11%"
            android:layout_marginTop="72dp"
            android:layout_width="96dp"
            android:layout_height="113dp" />

        <io.pijun.george.view.Hill
            android:id="@+id/globe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:id="@+id/screen_title"
            android:src="@drawable/ic_pijun_text"
            android:contentDescription="@string/pijun"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:layout_width="85dp"
            android:layout_height="38dp" />

        <TextView
            android:id="@+id/screen_subtitle"
            android:text="@string/share_wisely"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/show_register_button"
            android:text="@string/register"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:minHeight="48dp"
            android:minWidth="112dp"
            android:onClick="onShowRegistration" />

        <Button
            android:id="@+id/show_sign_in_button"
            android:text="@string/sign_in"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:minHeight="48dp"
            android:minWidth="112dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:onClick="onShowSignIn" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/si_username_container"
            app:hintEnabled="false"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/si_username"
                style="@style/WelcomeEditText"
                android:theme="@style/WelcomeTheme.EditText"
                tools:text="foo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:inputType="text|textNoSuggestions"
                android:privateImeOptions="nm" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/si_password_container"
            app:hintEnabled="false"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/common_gray">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/si_password"
                style="@style/WelcomeEditText"
                android:theme="@style/WelcomeTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/sign_in_button"
            android:text="@string/sign_in"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:minHeight="48dp"
            android:minWidth="112dp"
            android:layout_margin="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignInAction" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_username_container"
            app:hintEnabled="false"
            android:textColorHint="@color/common_gray"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/reg_username"
                style="@style/WelcomeEditText"
                android:theme="@style/WelcomeTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:inputType="text|textNoSuggestions"
                android:privateImeOptions="nm" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_password_container"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/common_gray"
            android:textColorHint="@color/common_gray"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/reg_password"
                style="@style/WelcomeEditText"
                android:theme="@style/WelcomeTheme.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/reg_email_container"
            app:hintEnabled="false"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/reg_email"
                style="@style/WelcomeEditText"
                android:theme="@style/WelcomeTheme.EditText"
                android:hint="@string/email_hint_msg"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/register_button"
            android:text="@string/register"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:minHeight="48dp"
            android:minWidth="112dp"
            android:onClick="onRegisterAction" />

    </io.pijun.george.WelcomeLayout>
</ScrollView>