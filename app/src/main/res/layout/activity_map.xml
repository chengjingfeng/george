<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<io.pijun.george.view.MainLayout
    android:id="@+id/root"
    android:fitsSystemWindows="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity">
    <io.pijun.george.view.DrawerBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageButton
        android:id="@+id/close_button"
        android:contentDescription="@string/close_drawer"
        android:src="@drawable/ic_arrow_back_24dp"
        android:onClick="onCloseDrawerAction"
        android:backgroundTint="#00000000"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <io.pijun.george.view.AvatarView
        android:id="@+id/avatar"
        android:elevation="6dp"
        app:borderColor="@android:color/white"
        android:onClick="showProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/close_button"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/username"
        tools:text="arash"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginStart="12dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintTop_toTopOf="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/location"
        tools:text="Thousand Oaks"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:fontFamily="@font/lato_bold"
        android:layout_marginStart="12dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.constraint.Guideline
        android:id="@+id/guide_50"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/settings"
        android:text="@string/settings"
        android:elevation="40dp"
        android:onClick="showProfile"
        android:textColor="@color/ui_tint_gray"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@id/guide_50"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/about"
        android:text="@string/about"
        android:elevation="40dp"
        android:textColor="@color/ui_tint_gray"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/log_out"
        android:text="@string/log_out"
        android:elevation="40dp"
        android:onClick="onLogOutAction"
        android:textColor="@color/ui_tint_gray"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:fontFamily="@font/lato_bold"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="0dp"
        tools:background="@android:color/holo_green_light"
        android:elevation="32dp"
        android:outlineProvider="bounds"
        android:transformPivotX="0px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/marker_details"
        android:padding="8dp"
        android:background="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/marker_username"
            tools:text="kanoong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/marker_location"
            tools:text="Thousand Oaks"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/marker_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/time"
            tools:text="now"
            app:layout_constraintStart_toEndOf="@id/marker_location"
            app:layout_constraintTop_toBottomOf="@id/marker_username"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/activity"
            tools:text="Driving"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/marker_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/marker_direction"
            android:contentDescription="@null"
            android:src="@drawable/ic_navigation_black_24dp"
            app:layout_constraintStart_toEndOf="@id/activity"
            app:layout_constraintTop_toBottomOf="@id/marker_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/speed"
            tools:text="29.7 m/s"
            app:layout_constraintStart_toEndOf="@id/marker_direction"
            app:layout_constraintTop_toBottomOf="@id/marker_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/my_location_fab"
        android:transformPivotX="0px"
        android:src="@drawable/ic_my_location_black_24dp"
        app:elevation="34dp"
        app:fabSize="normal"
        android:tint="@color/my_location_fab_tint"
        android:backgroundTint="@color/my_location_fab_background"
        app:borderWidth="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="280dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_friend_fab"
        android:transformPivotX="0px"
        android:src="@drawable/ic_person_black_24px"
        app:elevation="34dp"
        app:fabSize="normal"
        app:borderWidth="0dp"
        android:tint="@color/ui_tint_gray"
        android:backgroundTint="@color/my_location_fab_background"
        android:onClick="onAddFriendAction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_insetEdge="bottom"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- It's positioning gets controlled by the fragment -->
    <fragment
        android:id="@+id/friends_sheet"
        android:name="io.pijun.george.FriendsSheetFragment"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/touch_interceptor"
        android:elevation="38dp"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</io.pijun.george.view.MainLayout>
</layout>
